{
    agent any
    tools{
      nodejs 'node'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',  url: 'https://github.com/karthikrasamsetti/playwright_UTAF.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    bat 'npm install'
                }
            }
        }
        stage('Execute') {
            steps {
                script {
                    bat 'npx playwright test'
                }
            }
        }
        stage('Execute') {
            steps {
                script {
                    bat ' npx allure generate --clean allure-results && npx  allure open'
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'allure-report/*', allowEmptyArchive: true
            
        }
    }
}